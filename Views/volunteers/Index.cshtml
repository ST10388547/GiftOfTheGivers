@model IEnumerable<Volunteer>
@{
    ViewData["Title"] = "Volunteers";
}
<h2>Volunteers</h2>
<p><a asp-action="Register" class="btn btn-success">Register as Volunteer</a></p>
<table class="table table-striped">
    <thead><tr><th>Name</th><th>Email</th><th>Phone</th><th>Skills</th><th>Joined</th><th></th></tr></thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Name</td>
                <td>@v.Email</td>
                <td>@v.Phone</td>
                <td>@v.Skills</td>
                <td>@v.RegisteredAt.ToLocalTime().ToString("g")</td>
                <td><a asp-action="Assign" asp-route-volunteerId="@v.VolunteerId" class="btn btn-sm btn-primary">Assign</a></td>
            </tr>
        }
    </tbody>
</table>
