@model IEnumerable<Project>
@{
    ViewData["Title"] = "Projects";
}
<h2>Projects</h2>
@* Show create if admin *@
@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-success mb-3">Create Project</a>
}

<table class="table table-striped">
    <thead><tr><th>Title</th><th>Location</th><th>Status</th><th></th></tr></thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Title</td>
                <td>@p.Location</td>
                <td>@p.Status</td>
                <td><a asp-action="Details" asp-route-id="@p.ProjectId" class="btn btn-sm btn-primary">Details</a></td>
            </tr>
        }
    </tbody>
</table>

