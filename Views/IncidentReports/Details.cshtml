@model IncidentReport
@{
    ViewData["Title"] = "Incident Details";
}
<h2>@Model.Title</h2>
<p><strong>Location:</strong> @Model.Location</p>
<p><strong>Severity:</strong> @Model.Severity</p>
<p><strong>Reported:</strong> @Model.ReportedAt.ToLocalTime().ToString("g")</p>
<p><strong>Description:</strong></p>
<p>@Model.Description</p>

@if (User.Identity.IsAuthenticated)
{
    <form asp-action="Close" method="post" class="mt-3">
        <input type="hidden" name="id" value="@Model.IncidentId" />
        <button type="submit" class="btn btn-danger">Mark as Closed</button>
    </form>
}

